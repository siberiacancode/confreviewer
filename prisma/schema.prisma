generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Conference {
  id          String   @id
  name        String
  description String
  logo        String?
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Talk        Talk[]

  @@unique([name])
  @@map("conferences")
}

model Talk {
  id           String        @id @default(cuid())
  title        String
  speakers     TalkSpeaker[]
  description  String
  logo         String?
  url          String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  conferenceId String
  conference   Conference    @relation(fields: [conferenceId], references: [id])

  reactions TalkReaction[]

  @@unique([title, conferenceId])
  @@map("talks")
}

model TalkSpeaker {
  id      String  @id @default(cuid())
  name    String
  company String
  avatar  String?
  talkId  String
  talk    Talk    @relation(fields: [talkId], references: [id])

  @@map("talk_speakers")
}

model User {
  id        Int     @id
  username  String?
  firstName String?
  lastName  String?
  photoUrl  String?
  createdAt Int

  reactions TalkReaction[]

  @@map("users")
}

model TalkReaction {
  id        String       @id @default(cuid())
  talkId    String
  userId    Int
  type      ReactionType
  createdAt DateTime     @default(now())

  talk Talk @relation(fields: [talkId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([talkId, userId, type])
  @@map("talk_reactions")
}

enum ReactionType {
  likes
  wantsToWatch
}
